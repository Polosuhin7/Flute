{
    "name": "flute",
    "private": true,
    "devDependencies": {
        "lerna": "^4.0.0"
    },
    "engines": {
        "node": ">=10.16.0 <=14.x.x",
        "yarn": "1.*"
      },
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "heroku-prebuild": "yarn add -g lerna && yarn bootstrap",
        "heroku-postbuild": "yarn build:web",
        "postinstall": "yarn build:admin",
        "start": "lerna exec 'yarn start' --scope backend",
        "develop": "lerna exec 'yarn develop' --scope backend",
        "build:web": "lerna exec 'yarn build:web' --scope mobile",
        "build:admin": "lerna exec 'yarn build' --scope backend"
    }
}
